{
  "name": "@averay/codeformat",
  "version": "0.2.25",
  "author": "Adam Averay (https://adamaveray.com.au/)",
  "homepage": "https://github.com/adamaveray/codeformat",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adamaveray/codeformat.git"
  },
  "licence": "MIT",
  "description": "A very opinionated collection of configurations for a number of code formatting tools.",
  "type": "module",
  "engines": {
    "bun": ">=1.3"
  },
  "bin": {
    "codeformat": "dist/bin/codeformat.js"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "/.editorconfig",
    "/dist",
    "/README.md",
    "/tsconfig.base.json"
  ],
  "scripts": {
    "build": "rm -rf dist && bun run build:tsc && bun run build:php && chmod +x dist/bin/*.js",
    "build:tsc": "bun --bun x tsc --project tsconfig.build.json --outDir dist",
    "build:php": "cp -R src/php dist/src/ && cp -R rulesets/php dist/rulesets/",
    "test": "bun test",
    "format": "bun run build && dist/bin/codeformat.js fix",
    "lint": "bun run build && dist/bin/codeformat.js check",
    "prepare": "bun --bun x husky",
    "prepack": "bun run build",
    "release": "bun run lint && bun --bun x bumpp && bun publish --access=public",
    "watch": "bun run build:tsc --watch"
  },
  "peerDependencies": {
    "eslint": "^9.39.2",
    "knip": "^5.83.1",
    "prettier": "^3.8.1",
    "stylelint": "^16.26.1"
  },
  "dependencies": {
    "@averay/css-properties-sort-order": "^1.0.3",
    "@eslint/js": "^10.0.1",
    "@eslint/markdown": "^7.5.1",
    "@prettier/plugin-php": "^0.24.0",
    "@prettier/plugin-xml": "^3.4.2",
    "@stylistic/eslint-plugin": "^5.8.0",
    "@types/eslint-plugin-jsx-a11y": "^6.10.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@typescript-eslint/utils": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^62.5.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-you-might-not-need-an-effect": "^0.8.5",
    "eslint-plugin-regexp": "^3.0.0",
    "eslint-plugin-sonarjs": "^3.0.7",
    "eslint-plugin-unicorn": "^63.0.0",
    "globals": "^17.3.0",
    "postcss-scss": "^4.0.9",
    "prettier-plugin-ini": "^1.3.0",
    "stylelint-config-recommended": "^18.0.0",
    "stylelint-config-recommended-scss": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-order": "^7.0.1",
    "stylelint-plugin-defensive-css": "^2.4.2",
    "stylelint-scss": "^7.0.0",
    "stylelint-use-logical": "^2.1.3",
    "typescript-eslint": "^8.55.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bumpp": "^10.4.1",
    "husky": "^9.1.7",
    "typescript": "^5.9.3"
  }
}
