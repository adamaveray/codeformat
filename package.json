{
  "name": "@averay/codeformat",
  "version": "0.1.5",
  "author": "Adam Averay (https://adamaveray.com.au/)",
  "homepage": "https://github.com/adamaveray/codeformat",
  "repository": {
    "type": "git",
    "url": "https://github.com/adamaveray/codeformat.git"
  },
  "licence": "MIT",
  "description": "A very opinionated collection of configurations for a number of code formatting tools.",
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">=18"
  },
  "files": [
    ".editorconfig",
    ".prettierrc.json",
    "eslint.config.js",
    "index.js",
    "lib",
    "rulesets"
  ],
  "scripts": {
    "format": "npm run format:prettier && npm run format:eslint",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "lint": "npm run lint:prettier && npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@eslint/eslintrc": "^2.0.1",
    "@eslint/js": "^8.36.0",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-regexp": "^1.12.0",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "globals": "^13.20.0",
    "prettier": "^2.8.4"
  },
  "devDependencies": {
    "husky": "^8.0.3"
  }
}
